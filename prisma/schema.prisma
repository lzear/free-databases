datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @db.Text
  done      Boolean
}
